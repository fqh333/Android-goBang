<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Activity_chess_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/imageView_logo"
            android:background="@color/colorBased"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_weight="0"
            app:srcCompat="@mipmap/logo1"
            android:layout_alignBottom="@+id/textView_valid" />

        <TextView
            android:id="@+id/textView_valid"
            android:background="@color/colorBased"
            android:layout_alignRight="@id/imageView_logo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_player1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/player1"/>

        <ImageView
            android:id="@+id/imageView_black"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/black"/>


    </LinearLayout>

    <com.uwindsor.gobang.ChessBoardView
        android:id="@+id/boardView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_player2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/player2"/>

        <ImageView
            android:id="@+id/imageView_white"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/white"/>


    </LinearLayout>



</LinearLayout>